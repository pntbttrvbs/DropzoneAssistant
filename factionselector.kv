<FactionSelector@BoxLayout>:
    faction: facspin.text

    Image:
        id: facimage
        size_hint: (0.75,1)
        opacity: 0
        allow_stretch: False
        source: app._absolutePath('Images\\' + root.faction + '\\' + root.faction + '.png') if root.faction != 'Select your faction:' else ''
        mipmap: True
    Spinner:
        id: facspin
        text: 'Select your faction:'
        values: (faction for faction in app.ModelsMaster)
        #should be 1, set to 5 because I like the green highlight.
        on_text: facimage.opacity = 5